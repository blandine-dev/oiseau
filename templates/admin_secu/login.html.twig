{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block monTitre %}Page d'authentification{% endblock %}

{% block body %}
    {% if error %}
    <div class="alert alert-danger">
        {{error.messageKey | trans(error.messagedata, 'security')}}
    </div>
    {% endif %}
<div class="row mb-5">
    <div class="col-4 mt-5 mb-5 ml-3">
        <form action="{{path('connexion')}}" method="post">
            <div class="form-group">
                <label>Login :</label>
                <input type="text" required name="_username" class="form-control">
            </div>
            <div class="form-group">
                <label>Password :</label>
                <input type="password" required name="_password" class="form-control">
            </div>
            <input type="submit" class="btn btn-success my-5" value="S'identifier">
        </form>
    </div>
</div>
{% endblock %}
